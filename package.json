		"@types/nodemailer": "^6.4.6",
		"@types/react-transition-group": "^4.4.5",
		"gsap": "^3.11.2",
		"nodemailer": "^6.7.8",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-spring": "^9.5.5",
		"react-transition-group": "^4.4.5",
		"remix-utils": "^3.3.0",
		"simplex-noise": "^4.0.1",
		"zod": "^3.19.1"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.7.1",
		"@remix-run/eslint-config": "^1.7.1",
		"@types/react": "^18.0.15",
